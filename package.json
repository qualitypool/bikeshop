{
   "name": "bikeshop",
   "private": true,
   "workspaces": [
      "packages/*"
   ],
   "scripts": {
      "start": "yarn build && lerna run start --scope=@bikeshop/ui-web",
      "build": "yarn clean && lerna run build --stream && yarn test",
      "clean": "lerna run clean --parallel",
      "test": "lerna run test --stream --ci",
      "prettier": "prettier --write {**/*,*}.{json,ts,tsx}"
   },
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": false,
      "trailingComma": "es5"
   },
   "devDependencies": {
      "jest": "^24.9.0",
      "ts-jest": "^24.3.0",
      "@types/jest": "^24.9.1",
      "lerna": "^3.22.1",
      "prettier": "^2.0.5",
      "rimraf": "^3.0.2"
   },
   "engines": {
      "node": ">=13.0.0"
   }
}
