{
   "name": "bikeshop",
   "private": true,
   "workspaces": [
      "packages/*"
   ],
   "scripts": {
      "start": "npm run build && concurrently 'npm run watch --workspaces' 'npm run start --workspace=@bikeshop/ui-web'",
      "build": "npm run clean --workspaces --if-present && npm run build --workspaces --if-present",
      "clean": "npm run clean --workspaces --if-present",
      "test": "npm run test --workspaces --if-present -- --ci",
      "prettier": "prettier --write {**/*,*}.{json,ts,tsx}"
   },
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": false,
      "trailingComma": "es5"
   },
   "devDependencies": {
      "jest": "28.1.1",
      "ts-jest": "28.0.4",
      "@types/jest": "28.1.1",
      "prettier": "^2.6.2",
      "rimraf": "^3.0.2",
      "concurrently": "7.2.1"
   },
   "engines": {
      "node": ">=16.0.0"
   }
}
