{
   "name": "bikeshop",
   "private": true,
   "workspaces": [
      "packages/*"
   ],
   "scripts": {
      "start": "npm run build && npm run start --workspace=@bikeshop/ui-web",
      "build": "npm run clean --workspaces --if-present && npm run build --workspaces --if-present",
      "clean": "npm run clean --workspaces --if-present",
      "test": "npm run test --workspaces --if-present -- --ci",
      "prettier": "prettier --write {**/*,*}.{json,ts,tsx}"
   },
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": false,
      "trailingComma": "es5"
   },
   "devDependencies": {
      "jest": "26.6.0",
      "ts-jest": "^26.5.6",
      "@types/jest": "^26.0.23",
      "prettier": "^2.4.1",
      "rimraf": "^3.0.2"
   },
   "engines": {
      "node": ">=13.0.0"
   }
}
