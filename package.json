{
   "name": "bikeshop",
   "private": true,
   "workspaces": [
      "packages/*"
   ],
   "scripts": {
      "start": "lerna run start --scope=@bikeshop/ui-web",
      "build": "yarn clean && lerna run build --stream --since master && CI=true lerna run test --stream --since master",
      "clean": "lerna exec --parallel -- rm -rf build",
      "test": "CI=true lerna run test --stream --since master",
      "prettier": "prettier --write {**/*,*}.{json,ts,tsx}"
   },
   "prettier": {
      "tabWidth": 3,
      "semi": false,
      "singleQuote": false,
      "trailingComma": "es5"
   },
   "devDependencies": {
      "lerna": "^3.20.2",
      "prettier": "^2.0.4"
   }
}
